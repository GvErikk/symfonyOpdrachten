{% extends 'pages/base.html.twig' %}
{% block body %}
    <br />
    <div id="wrapper">
        {% include 'blocks/header.html.twig' %}
        <div id="menu">
            <ul>
                {% include 'blocks/menuArtikelen.html.twig' %}
            </ul>
        </div>
        <div class="content"><br />
            <b>Welkom Inkoper !</b><br />
            Hier kunt u producten bestellen die onder de minimalevoorraad zitten. <br />
            <div class="row">
                {#<div style="margin: 20px;"><input type="text" class="form-control" id="search-field" placeholder="Artikelnummer"></div>#}
            </div>
            <div class="row">
                <table id="artikelen" class="table table-hover" style="margin: 20px; width: 97%;">
                    <thead>
                    <tr>
                        <th>Artikelnummer</th>
                        <th>Bestelserie</th>
                        <th>Inkoopprijs</th>
                        <th>Minimum voorraad</th>
                        <th>Voorraad in aantal</th>
                        <th>Bestellen</th>

                    </tr>
                    </thead>
                    <tbody>
                    {% for artikel in artikelen %}
                        <tr>
                            <td>{{ artikel.artikelnummer }}</td>
                            <td>{{ artikel.bestelserie }}</td>
                            <td>{{ artikel.inkoopprijs }}</td>
                            <td>{{ artikel.minimumVoorraad }}</td>
                            <td>{{ artikel.vooraad }}</td>
                            <td><form action="{{ path('nieuworderOnderVoorraad', {'artikelnummer': artikel.artikelnummer}) }}" method="post"><input type="number" name="aantal"/> <input name="submit" type="submit" class="btn btn-success" value="Bestellen"/></form></td>
                        </tr>
                        {#{{ dump(artikel) }}#}
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
        {% include 'blocks/footer.html.twig' %}
    </div>
    </body>
{% endblock %}
